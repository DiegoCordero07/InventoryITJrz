<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory IT Juarez - <%= titulo %></title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome para iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
  <!-- Estilos personalizados -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navbar -->
  <% if (usuario) { %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
      <a class="navbar-brand" href="/inventario">
        <i class="fa-solid fa-truck-ramp-box"></i>
        Inventory IT Juarez
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/inventario">Inventario</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Cerrar Sesión</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <% } %>

  <!-- Contenedor principal -->
  <div class="container">
    <!-- Alertas -->
    <div id="alertPlaceholder"></div>
    
    <!-- Bandera para stock crítico -->
    <% if (typeof hayStockCritico !== 'undefined' && hayStockCritico) { %>
      <div class="banner-alerta">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Atención:</strong> Hay productos con stock crítico (1 unidad o menos).
      </div>
    <% } %>

    <!-- Contenido de la página -->
    <%- body %>
  </div>

  <!-- Footer -->
  <footer class="mt-5 py-3 text-center text-muted">
    <div class="container">
      <p>Inventory IT Juarez &copy; <%= new Date().getFullYear() %></p>
    </div>
  </footer>

  <!-- JavaScript de Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- JavaScript personalizado -->
  <script src="/js/scripts.js"></script>
</body>
</html> 